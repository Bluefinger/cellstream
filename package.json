{
  "name": "rythe",
  "version": "0.5.0",
  "description": "Rythe, a tiny, heavily tree-shakeable Reactive Stream library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm-run-all clean build:all build:umd",
    "build:all": "tsc --build ./config/tsconfig.esm.json ./config/tsconfig.cjs.json --pretty",
    "build:umd": "rollup -c",
    "clean": "rimraf ./dist/*",
    "clear:test": "jest --clearCache",
    "fix:docs": "prettier --write \"./documentation/**/*.md\"",
    "prepare": "npm run build",
    "test": "npm-run-all test:docs test:deps test:lint test:unit",
    "test:docs": "prettier --check \"./documentation/**/*.md\"",
    "test:deps": "madge -c --ts-config ./tsconfig.json ./src/index.ts",
    "test:lint": "eslint \"./+(src|tests|perf)/**/*.{ts,js}\" --cache --cache-location=\"./.cache/\"",
    "test:unit": "jest --all --coverage --runInBand",
    "tsc:help": "tsc -h --all",
    "watch": "jest --watch"
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "keywords": [
    "functional",
    "reactive",
    "modular",
    "library",
    "typescript",
    "streams"
  ],
  "bugs": {
    "url": "https://github.com/Bluefinger/rythe/issues"
  },
  "homepage": "https://github.com/Bluefinger/rythe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluefinger/rythe.git"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@typescript-eslint/typescript-estree": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "flush-promises": "^1.0.2",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "jest-date-mock": "^1.0.7",
    "lodash": "^4.17.15",
    "madge": "^3.4.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.7.1",
    "rollup": "^1.19.4",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
