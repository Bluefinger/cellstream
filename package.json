{
  "name": "rythe",
  "version": "0.10.0",
  "description": "Rythe, a tiny, heavily tree-shakeable Reactive Stream library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*.{js,js.map}",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "build": "gulp build",
    "clean": "gulp clean",
    "fix:docs": "prettier --write \"./documentation/**/*.md\"",
    "fix:lint": "eslint \"./+(src|tests|perf)/**/*.{ts,js}\" --fix",
    "prepare": "gulp build",
    "test": "gulp test",
    "test:tape": "ts-node -T --files --project tests/tsconfig.json node_modules/tape/bin/tape \"tests/**/*.ts\" | tap-dot",
    "tsc:help": "tsc -h --all",
    "watch": "gulp watch"
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "keywords": [
    "functional",
    "reactive",
    "modular",
    "library",
    "typescript",
    "streams"
  ],
  "bugs": {
    "url": "https://github.com/Bluefinger/rythe/issues"
  },
  "homepage": "https://github.com/Bluefinger/rythe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluefinger/rythe.git"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/jsdom": "^16.2.7",
    "@types/sinon": "^9.0.11",
    "@types/sinonjs__fake-timers": "^6.0.2",
    "@types/tape": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@typescript-eslint/typescript-estree": "^4.19.0",
    "@wessberg/rollup-plugin-ts": "^1.3.10",
    "buffer-json": "^2.0.0",
    "del": "^5.1.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "husky": "^4.3.8",
    "jsdom": "^16.5.1",
    "madge": "^4.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rollup": "^2.42.3",
    "rollup-plugin-terser": "^6.1.0",
    "sinon": "^9.2.4",
    "tap-dot": "^2.0.0",
    "tape": "^5.2.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "nyc": {
    "all": true,
    "cache-dir": "./.cache/nyc",
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "tests/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "watermarks": {
      "lines": [
        75,
        95
      ],
      "functions": [
        75,
        95
      ],
      "branches": [
        75,
        95
      ],
      "statements": [
        75,
        95
      ]
    }
  }
}
