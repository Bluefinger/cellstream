{
  "name": "rythe",
  "version": "0.9.0",
  "description": "Rythe, a tiny, heavily tree-shakeable Reactive Stream library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*.{js,js.map}",
    "types/**/*.d.ts"
  ],
  "scripts": {
    "build": "run-p build:all build:typings",
    "build:typings": "tsc --build ./config/tsconfig.typings.json --pretty",
    "build:all": "rollup -c",
    "clean": "rimraf ./{dist,types}/*",
    "fix:docs": "prettier --write \"./documentation/**/*.md\"",
    "fix:lint": "eslint \"./+(src|tests|perf)/**/*.{ts,js}\" --fix",
    "prepare": "run-s clean build",
    "test": "npm-run-all test:deps test:code",
    "test:code": "run-p test:docs test:lint test:typings test:coverage",
    "test:coverage": "nyc npm run test:tape",
    "test:deps": "madge -c --ts-config ./tsconfig.json ./src/index.ts",
    "test:docs": "prettier --check \"./documentation/**/*.md\"",
    "test:lint": "eslint \"./+(src|tests|perf)/**/*.{ts,js}\"",
    "test:tape": "ts-node -T --files --project tests/tsconfig.json node_modules/tape/bin/tape \"tests/**/*.ts\" | tap-dot",
    "test:typings": "tsc --build ./tests/tsconfig.json --pretty",
    "tsc:help": "tsc -h --all"
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "keywords": [
    "functional",
    "reactive",
    "modular",
    "library",
    "typescript",
    "streams"
  ],
  "bugs": {
    "url": "https://github.com/Bluefinger/rythe/issues"
  },
  "homepage": "https://github.com/Bluefinger/rythe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluefinger/rythe.git"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-sucrase": "^3.0.2",
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/jsdom": "^16.2.3",
    "@types/sinon": "^9.0.4",
    "@types/sinonjs__fake-timers": "^6.0.1",
    "@types/tape": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@typescript-eslint/typescript-estree": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jsdom": "^16.2.2",
    "madge": "^3.9.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.15.0",
    "rollup-plugin-terser": "^6.1.0",
    "sinon": "^9.0.2",
    "tap-dot": "^2.0.0",
    "tape": "^5.0.1",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "nyc": {
    "all": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "tests/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "watermarks": {
      "lines": [
        75,
        95
      ],
      "functions": [
        75,
        95
      ],
      "branches": [
        75,
        95
      ],
      "statements": [
        75,
        95
      ]
    }
  }
}
