{
  "name": "rythe",
  "version": "0.1.0",
  "description": "Rythe, a tiny, heavily tree-shakeable Reactive Stream library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "npm-run-all clean build:all build:umd",
    "build:all": "tsc --build ./config/tsconfig.esm.json ./config/tsconfig.cjs.json --pretty",
    "build:umd": "rollup -c",
    "clean": "rimraf ./dist/*",
    "test": "npm-run-all test:lint test:unit",
    "test:lint": "eslint --fix \"./+(src|tests)/**/*.ts\" --cache --cache-location \"./.rpt2_cache/\"",
    "test:unit": "jest --all --coverage",
    "clear:test": "jest --clearCache",
    "tsc:help": "tsc -h --all",
    "watch": "jest --watch"
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "keywords": [
    "functional",
    "reactive",
    "modular",
    "library",
    "typescript",
    "streams"
  ],
  "bugs": {
    "url": "https://github.com/Bluefinger/rythe/issues"
  },
  "homepage": "https://github.com/Bluefinger/rythe",
  "license": "MIT",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/helper-module-transforms": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-config": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.12.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
