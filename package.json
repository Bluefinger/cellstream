{
  "name": "rythe",
  "version": "0.5.1",
  "description": "Rythe, a tiny, heavily tree-shakeable Reactive Stream library",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm-run-all clean build:all build:umd",
    "build:all": "tsc --build ./config/tsconfig.esm.json ./config/tsconfig.cjs.json --pretty",
    "build:umd": "rollup -c",
    "clean": "rimraf ./dist/*",
    "fix:docs": "prettier --write \"./documentation/**/*.md\"",
    "prepare": "npm run build",
    "test": "npm-run-all test:deps test:code",
    "test:code": "run-p test:docs test:lint test:typings test:coverage",
    "test:coverage": "nyc npm run test:tape",
    "test:deps": "madge -c --ts-config ./tsconfig.json ./src/index.ts",
    "test:docs": "prettier --check \"./documentation/**/*.md\"",
    "test:lint": "eslint \"./+(src|tests|perf)/**/*.{ts,js}\" --cache --cache-location=\"./.cache/\"",
    "test:tape": "ts-node -T --files --project tests/tsconfig.json node_modules/tape/bin/tape \"tests/**/*.ts\" | tap-dot",
    "test:typings": "tsc --build ./tests/tsconfig.json --pretty",
    "tsc:help": "tsc -h --all"
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "keywords": [
    "functional",
    "reactive",
    "modular",
    "library",
    "typescript",
    "streams"
  ],
  "bugs": {
    "url": "https://github.com/Bluefinger/rythe/issues"
  },
  "homepage": "https://github.com/Bluefinger/rythe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluefinger/rythe.git"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jsdom": "^12.2.4",
    "@types/sinon": "^7.0.13",
    "@types/tape": "^4.2.33",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@typescript-eslint/typescript-estree": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "flush-promises": "^1.0.2",
    "husky": "^3.0.4",
    "jsdom": "^15.1.1",
    "madge": "^3.4.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.3",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "sinon": "^7.4.1",
    "tap-dot": "^2.0.0",
    "tape": "^4.11.0",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "nyc": {
    "all": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "tests/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "watermarks": {
      "lines": [
        75,
        95
      ],
      "functions": [
        75,
        95
      ],
      "branches": [
        75,
        95
      ],
      "statements": [
        75,
        95
      ]
    }
  }
}
