{
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./.rpt2_cache/tsBuildInfo",
    "outDir": "./dist/umd",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module":"esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "paths": {
      "rythe": ["./"],
      "rythe/*": ["./*"]
    },
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*"
  ]
}
