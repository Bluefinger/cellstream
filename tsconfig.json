{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.rpt2_cache/tsBuildInfo",
    "outDir": "./dist/umd",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/__tests__/**/*", "./dist/**/*.js"]
}
